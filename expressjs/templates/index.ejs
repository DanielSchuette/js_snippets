<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <!-- It is probably better to put the styles
         into dirs that correspond to the routes,
         even if that means repetition. This
         solution is everything but beautiful. -->
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="../styles.css">

    <!-- jQuery and script for Delete-btn click events -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="scripts/main.js"></script>

    <title>An Ejs Template</title>
</head>
<body>
    <% include partials/navbar %>
    <h1>An Ejs Template file</h1>
    <h2>
        <!-- '=' whenever something gets printed out! -->
        <%= title %>
    </h2>
        <% if (msg !== "") { %>
            <h2 class="title__success"><%= msg %></h2>
        <% } %>
    <h3>Users:</h3>
    <ol>
        <% users.forEach(function(user) { %>
            <% if (user.lastName || user.firstName) { %>
            <!-- in-memory value! -->
            <li><%= user.lastName %>, <%= user.firstName %> - <a class="delete-user" href="#">Delete</a></li>
            <% } else if (user.last_name || user.first_name) { %>
            <!-- database value! -->
            <li><%= user.last_name %>, <%= user.first_name %> - <a class="delete-user" href="#" data-id="<%= user._id %>">Delete</a></li>
            <% } %>
        <% }) %>
    </ol>
    <h3>Add Customer:</h3>
    <form action="/users/add" method="post">
        <div class="input-field">
            <label for="first-name">First Name</label>
            <input type="text" name="first_name" id="first-name">
        </div>
        <div class="input-field">
            <label for="last-name">Last Name</label>
            <input type="text" name="last_name" id="last-name">
        </div>
        <div class="input-submit">
            <input type="submit" value="submit">
        </div>
    </form>
</body>
</html>
